mixin archived(date, description)
  li.archived
    span= date+'.'
    span= description
mixin progress(description)
  li.progress
    span In progress..
    span= description
mixin next(description)
  li.next
    span Up Next.
    span= description
mixin pending(order, description)
  li.pending
    span= order+'.'
    span= description

