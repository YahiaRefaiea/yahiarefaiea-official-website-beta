step= .03
pattern= 1.16
line= {
  distance: baseline*2.5,
  rotate: 5deg,
  keyframe: 0
}

//  MOVE
move(to, distance=line.distance, rotate=line.rotate)
  if(to=='up')
    opacity: 0
    transform: translateY(- distance) rotate(- rotate)
  if(to=='middle')
    opacity: 1
    transform: translateY(0) rotate(0)
  if(to=='down')
    opacity: 0
    transform: translateY(distance) rotate(rotate)

//  MULTI ANIMATION
multiAnimation(min, max, dur=duration, dly=0, d=0)
  for i in min..max
    d= (d+step)*pattern
    &:nth-child({i})
      animation-duration: dur+d
      animation-delay: unit(dly+d, 's')

//  LINE ANIMATION
lineAnimation(min, max, d=0)
  line.keyframe= line.keyframe + 1
  animation: lineNum+line.keyframe duration easing forwards
  @keyframes lineNum{line.keyframe}
    {block}
  multiAnimation(min, max, duration, 0, d)

//  SHOW
show(min, max, dly=0)
  move('down')
  +lineAnimation(min, max, dly)
    0%
      move('down')
    100%
      move('middle')

//  HIDE
hide(min, max, dly=0)
  move('middle')
  +lineAnimation(min, max, dly)
    0%
      move('middle')
    100%
      move('up')
