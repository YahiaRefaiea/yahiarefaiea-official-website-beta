.template[data-template=bucketAll]
  templateAnimation('.small > *', 2, duration3)
  templateAnimation('ul > *', 28, duration5)
  templateAnimation('.links > *', 1, duration33)

  .small
    margin-bottom: baseline*.5

  //  NORMAL
  ul.blocks li
    span
      display: inline-block
      &:nth-child(1)
        width: baseline*6
    span, svg
      hasTransition()
    &.next span
      color: yellow
    &.archived span,
    &.progress span
      color: grey-low
    &.archived
      a, svg
        display: block
      svg
        makeAbsolute: ((list-height - 24px)*.5) (baseline*6 - baseline*1.25)
        fill: grey-low
      span:nth-child(2)
        text-decoration: line-through

  //  HOVER
  ul.blocks.hover li
    span
      color: grey-low
    a:hover
      span
        color: grey-high
      svg
        fill: yellow
      span:nth-child(2)
        text-decoration: none

.wrapper.bucketAll
  overflow-y: scroll
