template= {
  padding: container.padding.top + navigation.height + baseline*3.75
}

.template
  display: none
  makeAbsolute: 0 0 0
  white-space: nowrap
  main
    makeAbsolute: template.padding 0
    padding-bottom: baseline*2.75
    span
      display: block
    h1 > *,
    .h1 > *
      height: headline-height
    .p, ul
      margin-bottom: baseline*.75
  footer
    makeAbsolute: auto 0 (container.padding.bottom)

//  HEADLINE ANIMATION
.template h1 > *,
.template .h1 > *
  show: 2
  mark:before
    {align-alt}: 100%
    animation: markAnimation duration easing duration*.5 forwards
    @keyframes markAnimation
      0%
        {align-alt}: 100%
      100%
        {align-alt}: 0
.template:not(.current)
  h1 > *,
  .h1 > *
    hide: 2
